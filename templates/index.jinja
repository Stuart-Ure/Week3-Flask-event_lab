{% extends 'base.jinja' %} {% block content %}
<h1>{{ title }} !!!</h1>

<form action=" /events" method= "post"> 
  <label for = "name"> Name</label>
  <input type = "text" name = "name" id = "name" placeholder=" please enter an event name :)">
  <label for = "date"> Date </label>
  <input type="date" id="date" name="date">
  <label for = "location"> Location</label>
  <input type = "text" name = "location" id = "location" placeholder=" please enter an event location:)">
  <label for="guests">Number of guests (1-100):</label>

<input type="number" id="guests" name="guests"
       min="1" max="100">
  <label for ="description"> Description </label>
  <textarea type= 'text' name = "description" id="description" rows=" 2" cols="30" placeholder=" Enter description here"></textarea>
  <label for = "recurring"> Is this recurring </label>
  <input type="checkbox" id="recurring" name="recurring">

  <input type="submit" value= "Add Event">



</form> 
<form action="/events/delete", method="post"> 
<label for = "name"> Which event needs deleted</label>
<input type="text" name="name" id="name">
<input type="submit" value= "Remove Event">


</form>

<ul>
{% for event in events %}  
  <li>
    {{ event.name}} {{ event.date}} {{event.location}} {{event.num_of_guests}} {{event.description}}
    {% if event.recurring %}
        <p> This event is recurring</p>

    {% endif %}
    <form action="/events/deleteindex", method="post">
    <input type ="hidden" name="index" value={{events.index(event)}}>
    <input type="submit" value = "delete me">
    
    </form>
  </li>
{% endfor %}
</ul>
{% endblock content %}